<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=,, initial-scale=1.0">
    <title>Home/Twitter</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="~/css/home.css" rel="stylesheet">
    <link rel="stylesheet" href="~/font_awesome/css/all.min.css">
</head>
<body>

    <div class="row">
        <div id="menu" class="col-md-3">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><img style="height: 50px;margin-left:-10px;" src="~/img/Twitter_Logo_Blue.png" alt=""></li>
                <li class="list-group-item lgi"><i class="fas fa-home"></i><span><a href="@Url.Action("Index","Account")" role="button">Home</a></span></li>
                <li class="list-group-item lgi"><i class="fas fa-hashtag"></i><span><a href="@Url.Action("Explore","Account")" role="button">Explore</a></span></li>
                <li class="list-group-item lgi"><i class="far fa-bell"></i><span><a href="#" role="button">Notifications</a></span></li>
                <li class="list-group-item lgi"><i class="far fa-envelope"></i><span><a href="@Url.Action("Messages","Account")" role="button">Messages</a></span></li>
                <li class="list-group-item lgi"><i class="far fa-bookmark"></i><span><a href="#" role="button">Bookmarks</a></span></li>
                <li class="list-group-item lgi"><i class="far fa-list-alt"></i><span><a href="#" role="button">Lists</a></span></li>
                <li class="list-group-item lgi"><i class="far fa-user"></i><span><a href="@Url.Action("Profile","Account")" role="button">Profile</a></span></li>
                <li class="list-group-item lgi"><i class="fas fa-ellipsis-h"></i><span><a href="#" role="button">More</a></span></li>
                <li class="list-group-item lgi"><div class="button"><a id="leftsidebutton" href="@Url.Action("Home","Home")" class="btn btn-info" role="button">Tweet</a></div></li>
                 <div style="position:fixed;bottom:0;">
                    <div class="tweets">
                      <div style="position:relative;top:-15px" class="img-div">
                        <img style="height: 49px;" class="rounded-circle" src="~/img/user.png" alt="">
                      </div>
                      <div class="carduser">
                        <div class="cardusername">
                          <p id="cardusername">Oguzcan Ocal</p>
                        </div>
                        <div class="carduserdescription">
                          <p id="carduserdescription"><a href="/Account/Login">Log out</a></p>
                        </div>
                      </div>
                    </div>
                  </div>
            </ul>
        </div>
        <div class="col-md-9">
          @RenderBody()
        </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
<script>
$(function(){
  $(".followbtn").click(function(){
    var followid = $(this).data("follow-userid");
    var userid = $(this).data("userid");

    $.ajax({
      method:"POST",
      url: "/Tweet/AddFollower",
      data:{followerid:followid,uid:userid}
    }).done(function(data){
      var divclass = ".follow-"+data.result;
      var div = $(divclass);
      div.remove();

    })

  });
});
</script>